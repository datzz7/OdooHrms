<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="view_website_sale_res_config_settings_inherited">
			<field name="name">res.config.settings.inherited</field>
			<field name="model">res.config.settings</field>
			<field name="inherit_id" ref="sale.res_config_settings_view_form" />
			<field name="arch" type="xml">
				<xpath expr="//div[@data-key='sale_management']" position="inside">
					<h2>Manage Product Varients (Style, Size, Color, Brand)</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                            	<label for="style_id"/>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="style_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                            	<label for="size_id"/>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="size_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                            	<label for="color_id"/>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="color_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="mt16">
                                        <button name="update_all_product_att" type="object" class="btn btn-primary">Update Values</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
			</field>
		</record>
	</data>
</odoo>
