<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="material_request_enhancements_purchase_form">
            <field name="name">purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_ref']" position="after">
                    <field name="account_analytic_id" attrs="{'readonly': [('state', '=', 'purchase')]}" options="{'no_create': True, 'no_open': True}"/>
                    <field name="analytic_tag_ids" widget="many2many_tags" attrs="{'readonly': [('state', '=', 'purchase')]}" options="{'no_create': True, 'no_open': True}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>