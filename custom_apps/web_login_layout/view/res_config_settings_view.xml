<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_login_layout_config" model="ir.ui.view">
		<field name="name">inherited.res.config.settings.view.form</field>
		<field name="model">res.config.settings</field>
		<field name="inherit_id"
			ref="briqx_debranding.res_config_settings_view_form" />
		<field name="arch" type="xml">
			<div id="business_documents" position="after">
				<div id="login_layout">
					<h2>Login Page Layout</h2>
					<div class="row mt16 o_settings_container">
						<div class="col-12 col-lg-6 o_setting_box">
							<div class="o_setting_right_pane">
								<div class="content-group">
									<div class="mt16 row">
										<label for="bg_image"
											class="col-3 col-lg-3 o_light_label" />
										<field name="bg_image" />
									</div>
								</div>
								<div class="content-group">
									<div class="mt16 row">
										<label for="bg_color"
											class="col-3 col-lg-3 o_light_label" />
										<field name="bg_color" placeholder="#4085dc" />
									</div>
								</div>
								<div class="content-group">
									<div class="mt16 row">
										<label for="bg_blur"
											class="col-3 col-lg-3 o_light_label" />
										<field name="bg_blur" />
									</div>
								</div>
							</div>
						</div>
						<div class="col-12 col-lg-6 o_setting_box">
							<div class="o_setting_right_pane">
								<span class="o_form_label">Sign In Template</span>
								<div class="text-muted">
									Choose your login page layout
								</div>
								<div class="content-group">
									<div class="mt16 row">
										<label for="layout_option"
											class="col-3 col-lg-3 o_light_label" />
										<field name="layout_option" />
									</div>
								</div>
								<div class="content-group hidden">
									<div class="mt16 row">
										<label for="layout_structure"
											class="col-3 col-lg-3 o_light_label" invisible='1' />
										<field name="layout_structure" invisible='1' />
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</field>
	</record>
</odoo>
